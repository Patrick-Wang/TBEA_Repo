<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="financingBankForeignCurrencyCreditEntryJSP">
        <response name="framework/templates/singleDateReport/entry" type="jsp">
            <map key="updateUrl" value="financingBankForeignCurrencyCreditEntryUpdateClr"/>
            <map key="submitUrl" value="financingBankForeignCurrencyCreditEntrySubmitClr"/>
        </response>
    </controller>
    <controller id="financingBankForeignCurrencyCreditEntryUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingBankForeignCurrencyCreditEntryUpdateServ"/>
        <callcontroller id="financingBankForeignCurrencyCreditEntryFmtClr"/>
        <formatterServer acceptNullAs="" id="fmtServ" table="${result.matrix}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>银行名称</name>
                </item>
                <item>
                    <name>币种</name>
                </item>
                <item>
                    <name>授信额</name>
                </item>
                <item>
                    <name>已使用额度</name>
                </item>
                <item>
                    <name>贷款余额</name>
                </item>
                <item>
                    <name>授信到期日</name>
                </item>
                <item>
                    <name>已处理</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="financingBankForeignCurrencyCreditEntryFmtClr">
        <formatter export="true" id="fmtData">
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="3,4,5"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <service id="financingBankForeignCurrencyCreditEntryUpdateServ" transaction="transactionManager">
        <sql id="data">select id,
bankName,
currency,
authCreditAmount,
usedAmount,
loanBalance,
CONVERT(varchar(20),authCreditExpire, 23) tmp5,
solved from financing_bank_foreign_currency_credit</sql>
        <list id="ids" sql="data" value="0"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="1"/>
            <list sql="data" type="string" value="2"/>
            <list sql="data" type="double" value="3"/>
            <list sql="data" type="double" value="4"/>
            <list sql="data" type="double" value="5"/>
            <list sql="data" type="date" value="6"/>
            <list sql="data" type="string" value="7"/>
        </table>
    </service>
    <controller id="financingBankForeignCurrencyCreditEntrySubmitClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <context key="data" value="${request.data.asJsonArray}"/>
        <context key="src" value="${session.account.name} 录入"/>
        <context key="time" value="${calendar.current.secondFormat}"/>
        <callservice id="financingBankForeignCurrencyCreditEntrySubmitServ"/>
        <response type="json">
            <errorCode>0</errorCode>
            <message>OK</message>
        </response>
    </controller>
    <service id="financingBankForeignCurrencyCreditEntrySubmitServ" transaction="transactionManager">
        <merge data="${data}" table="financing_bank_foreign_currency_credit">
            <where>
                <id ref="0" type="int"/>
            </where>
            <set>
                <solved ref="7" type="string"/>
                <_src type="string" value="${src}"/>
                <_time type="date" value="${time}"/>
            </set>
        </merge>
    </service>
</components>
