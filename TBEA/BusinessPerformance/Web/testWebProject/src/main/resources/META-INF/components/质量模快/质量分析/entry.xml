<components>
 <service id="servZlfxUpdate" transaction="transactionManager">
  <sql id="comment" export="true">select
			comment,
			zt
			from
			cpzlqk_zlfx
			where
			condition=${condition}
		</sql>
 </service>
 <service id="servZlfxSubmit" transaction="transactionManager">
  <merge data="data" table="cpzlqk_zlfx">
   <where>
    <condition type="string" ref="0"/>
   </where>
   <set>
    <condition type="string" ref="0"/>
    <comment type="string" ref="1"/>
    <zt type="int" value="${zt}"/>
   </set>
  </merge>
 </service>
 <controller id="zlfxUpdate">
  <context key="condition" value="${request.condition.asString}"/>
  <context key="type" value="${request.type.asString}"/>
  <context key="compId" value="${orgs.virtualCYOrg.ids[request.compId.asInt]}"/>
  <context key="isByqCy" value="${50000 == compId}"/>
  <context key="isXlCy" value="${50001 == compId}"/>
  <context key="isPdCy" value="${50002 == compId}"/>
  <callservice id="servZlfxUpdate"/>
  <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0][0]}</comment>
      <zt>${comment[0][1]}</zt>
     </response>
    </if>
  <if test="${isByqCy}">
   <if test="${auth[46]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0][0]}</comment>
      <zt>${comment[0][1]}</zt>
     </response>
    </if>
   </if>
   <if test="${!auth[46] &amp;&amp; auth[50]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
      <readonly>true</readonly>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
      <readonly>true</readonly>
     </response>
    </if>
   </if>
   <if test="${!auth[46] &amp;&amp; !auth[50]}">
    <response type="json">
     <deny>deny</deny>
    </response>
   </if>
  </if>
  <if test="${isXlCy}">
   <if test="${auth[48]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
     </response>
    </if>
   </if>
   <if test="${!auth[48] &amp;&amp; auth[52]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
      <readonly>true</readonly>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
      <readonly>true</readonly>
     </response>
    </if>
   </if>
   <if test="${!auth[48] &amp;&amp; !auth[52]}">
    <response type="json">
     <deny>deny</deny>
    </response>
   </if>
  </if>
  <if test="${isPdCy}">
   <if test="${auth[47]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
     </response>
    </if>
   </if>
   <if test="${!auth[47] &amp;&amp; auth[51]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
      <readonly>true</readonly>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
      <readonly>true</readonly>
     </response>
    </if>
   </if>
   <if test="${!auth[47] &amp;&amp; !auth[51]}">
    <response type="json">
     <deny>deny</deny>
    </response>
   </if>
  </if>
  <if test="${!(isByqCy || isXlCy ||isPdCy)}">
   <if test="${authCompanies[45].contains[compId]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
     </response>
    </if>
   </if>
   <if test="${!authCompanies[45].contains[compId] &amp;&amp; authCompanies[49].contains[compId]}">
    <if test="${comment.isEmpty}">
     <response type="json">
      <comment>${&quot;&quot;}</comment>
      <readonly>true</readonly>
     </response>
    </if>
    <if test="${!comment.isEmpty}">
     <response type="json">
      <comment>${comment[0]}</comment>
      <readonly>true</readonly>
     </response>
    </if>
   </if>
   <if test="${!authCompanies[45].contains[compId] &amp;&amp; !authCompanies[49].contains[compId]}">
    <response type="json">
     <deny>deny</deny>
    </response>
   </if>
  </if>
 </controller>
 <controller id="zlfxSubmit">
  <context key="data" value="${request.data.asJsonArray}"/>
  <context key="zt" value="${2}"/>
  <callservice id="servZlfxSubmit"/>
  <response type="json">
   <errorCode>0</errorCode>
   <message>OK</message>
  </response>
 </controller>
 <controller id="zlfxApprove">
  <context key="data" value="${request.data.asJsonArray}"/>
  <context key="zt" value="${1}"/>
  <callservice id="servZlfxSubmit"/>
  <response type="json">
   <errorCode>0</errorCode>
   <message>OK</message>
  </response>
 </controller>
</components>
