<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="financingRMBLoanShow">
        <response name="framework/templates/singleDateReport/show" type="jsp">
            <map key="year" value="${calendar.current.year}"/>
            <map key="month" value="${calendar.current.month}"/>
            <map key="updateUrl" value="financingRMBLoanUpdateClr"/>
            <map key="exportUrl" value="financingRMBLoanExportClr"/>
        </response>
    </controller>
    <controller id="financingRMBLoanUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingRMBLoanShowServ"/>
        <callcontroller id="financingRMBLoanFmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>银行名称</name>
                </item>
                <item>
                    <name>贷款起始日</name>
                </item>
                <item>
                    <name>贷款到期日</name>
                </item>
                <item>
                    <name>金额</name>
                </item>
                <item>
                    <name>利率</name>
                </item>
                <item>
                    <name>浮动幅度</name>
                </item>
                <item>
                    <name>贷款期限</name>
                </item>
                <item>
                    <name>贷款品种</name>
                </item>
                <item>
                    <name>担保方式</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="financingRMBLoanFmtClr">
        <formatter export="true" id="fmtData">
            <PercentFormatter reservedCount="1">
                <DefaultMatcher cols="4,5"/>
            </PercentFormatter>
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="3"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="financingRMBLoanExportClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingRMBLoanShowServ"/>
        <callcontroller id="financingRMBLoanFmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="特变电工人民币贷款明细统计表"/>
        <list id="title" type="string">银行名称,贷款起始日,贷款到期日,金额,利率,浮动幅度,贷款期限,贷款品种,担保方式</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="${request.date.asString}特变电工人民币贷款明细统计表.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="financingRMBLoanShowServ" transaction="transactionManager">
        <sql id="data">select id,
bankName,
CONVERT(varchar(20),beginningDate, 23) tmp1,
CONVERT(varchar(20),maturityDate, 23) tmp2,
loanDmount,
loanRate,
floatingRatio,
loanTerm,
loanType,
guarantyStyle,
solved from financing_RMB_loan where dwid in ${dwid}</sql>
        <list id="ids" sql="data" value="0"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="1"/>
            <list sql="data" type="date" value="2"/>
            <list sql="data" type="date" value="3"/>
            <list sql="data" type="double" value="4"/>
            <list sql="data" type="double" value="5"/>
            <list sql="data" type="double" value="6"/>
            <list sql="data" type="string" value="7"/>
            <list sql="data" type="string" value="8"/>
            <list sql="data" type="string" value="9"/>
            <list sql="data" type="string" value="10"/>
        </table>
    </service>
</components>
