<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="03592CA737B3E3319931BEECE7E0089FSHOWCLR">
        <response name="framework/templates/singleDateReport/show" type="jsp">
            <map key="year" value="${calendar.current.year}"/>
            <map key="month" value="${calendar.current.month}"/>
            <map key="updateUrl" value="03592CA737B3E3319931BEECE7E0089FUpdateClr"/>
            <map key="exportUrl" value="03592CA737B3E3319931BEECE7E0089FExportClr"/>
        </response>
    </controller>
    <controller id="03592CA737B3E3319931BEECE7E0089FUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="03592CA737B3E3319931BEECE7E0089FShowServ"/>
        <callcontroller id="03592CA737B3E3319931BEECE7E0089FFmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>单位名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>合同编号</name>
                    <type>text</type>
                </item>
                <item>
                    <name>项目名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>对方单位名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>所在国家</name>
                    <type>text</type>
                </item>
                <item>
                    <name>币种 </name>
                    <type>text</type>
                </item>
                <item>
                    <name>收款银行</name>
                    <type>text</type>
                </item>
                <item>
                    <name>合同金额 </name>
                </item>
                <item>
                    <name>签订合同起始日</name>
                    <type>date</type>
                </item>
                <item>
                    <name>签订合同汇率</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="03592CA737B3E3319931BEECE7E0089FFmtClr">
        <formatter export="true" id="fmtData">
            <NumberFormatter reservedCount="2">
                <DefaultMatcher cols="7"/>
            </NumberFormatter>
            <NumberFormatter reservedCount="4">
                <DefaultMatcher cols="9"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="03592CA737B3E3319931BEECE7E0089FExportClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="03592CA737B3E3319931BEECE7E0089FShowServ"/>
        <callcontroller id="03592CA737B3E3319931BEECE7E0089FFmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="出口外汇合同"/>
        <list id="title" type="string">单位名称,合同编号,项目名称,对方单位名称,所在国家,币种 ,收款银行,合同金额 ,签订合同起始日,签订合同汇率</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="出口外汇合同.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="03592CA737B3E3319931BEECE7E0089FShowServ" transaction="transactionManager">
     <if test="${'dwmc' == '全部'}">
         <context key="dwmc" value="${sysAuth.cnames[96]}"></context>
         <if test="${sysAuth.has[98]}">
             <context key="dwmc" value="${dwmc.push['特变电工股份有限公司（采购中心）']}"></context>
         </if>
         <if test="${sysAuth.has[99]}">
             <context key="dwmc" value="${dwmc.push['特变电工股份有限公司（资金中心）']}"></context>
         </if>
     </if>
        <else>
            <context key="dwmc" value="${dwmc.packAsList}"></context>
        </else>
       <sql id="data">
select 
	id,
	companyName,
	num,
	projectName,
	clientCompanyName,
	country,
	currency,
	dueBank,
	amount,
	CONVERT(varchar(20),startDate, 23) tmp8,
	exchangeRate
from foreign_exchange_export_contract
            where companyName in ${dwmc}
</sql>
        <list id="ids" sql="data" value="0"/>
        <context key="counter" value="${counterFactory.newCounter}"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="${counter.reset[1].val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="double" value="${counter.next.val}"/>
            <list sql="data" type="date" value="${counter.next.val}"/>
            <list sql="data" type="double" value="${counter.next.val}"/>
        </table>
    </service>
</components>
