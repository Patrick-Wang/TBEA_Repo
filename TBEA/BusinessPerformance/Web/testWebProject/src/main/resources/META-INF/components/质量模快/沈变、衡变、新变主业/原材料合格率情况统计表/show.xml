<components>
	<service id="servYszkhkzb" transaction="transactionManager">
		
		<sql id="yszkhkzb">
			select 
				ZB.id, 
				CONVERT(varchar(20), ZB.ksrq, 23) as startDate, 
				CONVERT(varchar(20), ZB.jzrq, 23) as endDate, 
				ZB.xmmc,
				ZB.khmc,
				ZB.htje,
				ZB.yszkje,
				ZB.yqkje,
				ZB.yqksj
			from 
				yszkhkzb ZB
			where 
				ZB.xmgs = ${compId} and
				ZB.ksrq &gt;= ${dStart.date} and 
				ZB.jzrq &lt;= ${dEnd.date}
			order by
				ZB.ksrq,
				ZB.jzrq
		</sql>
		
		<sql id="yszkhkzbhj">
			select 
				CONVERT(varchar(20), ZB.ksrq, 23) as startDate, 
				CONVERT(varchar(20), ZB.jzrq, 23) as endDate, 
				sum(htje) as sumhtje,
				sum(yszkje) as sumyszkje,
				sum(yqkje) as sumyqkje,
				sum(yqksj) as sumyqksj
			from 
				yszkhkzb ZB
			where 
				ZB.xmgs = ${compId} and
				ZB.ksrq &gt;= ${dStart.date} and 
				ZB.jzrq &lt;= ${dEnd.date}
			group by
				ZB.ksrq,
				ZB.jzrq
			order by 
				ZB.ksrq,
				ZB.jzrq
		</sql>
		
		<sql id="hj">
			select 
				sum(htje) as sumhtje,
				sum(yszkje) as sumyszkje,
				sum(yqkje) as sumyqkje,
				sum(yqksj) as sumyqksj
			from 
				yszkhkzb ZB
			where 
				ZB.xmgs = ${compId} and
				ZB.ksrq &gt;= ${dStart.date} and 
				ZB.jzrq &lt;= ${dEnd.date}
		</sql>
		
		<call id="gs" object="${groupSum}" method="yszkhkzbGroupSum">
			<param type="object">${yszkhkzb}</param>
			<param type="object">${yszkhkzbhj}</param>
		</call>
		
		<list id="ids" type="int" sql="gs" value="0" >
				<item>-2</item>
		</list>
		<table id="result" rowIds="ids">
			<list id="ks" type="string" sql="gs" value="1" >
				<item>--</item>
			</list>
			<list id="jz" type="string" sql="gs" value="2"  >
				<item>--</item>
			</list>
			<list id="xmmc" type="string" sql="gs" value="3"  >
				<item>合计</item>
			</list>
			<list id="khmc" type="string" sql="gs" value="4"  >
				<item>--</item>
			</list>
			<list id="htje" type="double" sql="gs" value="5"  >
				<item>${hj[0][0]}</item>
			</list>
			<list id="yszkje" type="double" sql="gs" value="6" >
				<item>${hj[0][1]}</item>
			</list>
			<list id="yqkje" type="double" sql="gs" value="7" >
				<item>${hj[0][2]}</item>
			</list>
			<list id="yqksj" type="double" sql="gs" value="8" >
				<item>${hj[0][3]}</item>
			</list>
		</table>

		<context key="result" value="${result}"/>
	</service>
	
	<controller id="yszkhkzbUpdate">

		<context key="dStart" value="${request.dStart.asCalendar.monday}"/>
		<context key="dEnd" value="${request.dEnd.asCalendar.sunday}"/>
		<callservice id="servCompTypeToId"/>
		<callservice id="servYszkhkzb"/>
		
		<formatter id="data">
			<NumberFormatter reservedCount="1">
				<DefaultMatcher cols="5,6,7"/>
			</NumberFormatter>
			<NumberFormatter reservedCount="0">
				<DefaultMatcher cols="8"/>
			</NumberFormatter>
		</formatter>
		
		<formatterServer id="serv" table="${result.matrix}">
			<formatter ref="data"/>
		</formatterServer>
		
		<response type="json"> 
			<header type="array">
				<item>
					<name>开始日期</name>
				</item>
				<item>
					<name>截止日期</name>
				</item>
				<item>
					<name>项目名称</name>
				</item>
				<item>
					<name>客户名称</name>
				</item>
				<item>
					<name>合同金额</name>
				</item>
				<item>
					<name>应收账款金额</name>
				</item>
				<item>
					<name>逾期款金额</name>
				</item>
				<item>
					<name>逾期款时间（月）</name>
				</item>
			</header>
			<mergeRows type="array">
				<item>
					<col>0</col>
				</item>
				<item>
					<col>1</col>
				</item>
			</mergeRows>
			<data>${serv.result}</data>
		</response>
	</controller>
	
	<controller id="yszkhkzbExport">

		<context key="dStart" value="${request.dStart.asCalendar.monday}"/>
		<context key="dEnd" value="${request.dEnd.asCalendar.sunday}"/>
		<callservice id="servCompTypeToId"/>
		<callservice id="servYszkhkzb"/>
		<context key="tbs" value="${result.matrixNoIds}"/>
		
		<ExcelTemplate id="excelTemplate" sheet="应收账款回款周报"/>
		
		<list id="title" type="string">
			周期,周期,项目名称,客户名称,合同金额,应收账款金额,逾期款金额,逾期款时间（月）
		</list>
				
		<formatter id="data">
			<NumberFormatter reservedCount="1">
				<DefaultMatcher cols="4,5,6"/>
			</NumberFormatter>
			<NumberFormatter reservedCount="0">
				<DefaultMatcher cols="7"/>
			</NumberFormatter>
		</formatter>
		
		<formatter id="excel">
			<ExcelTitleFilter>
				<ExcelTemplate ref="excelTemplate"/>
				<Offset row="0" col="0"/>
				<titles>
					<title ref="title"></title>
				</titles>
			</ExcelTitleFilter>
			<ExcelMergeFormatter>
				<ExcelTemplate ref="excelTemplate"/>
				<MergeRegion x="0" y="0" width="8" height="1"/>
				<MergeRegion x="0" y="1" width="2" height="${tbs.size}"/>
			</ExcelMergeFormatter>
			<ExcelHeaderCenterFormatter>
				<DefaultMatcher cols="0, 1, 2, 3"/>
				<ExcelTemplate ref="excelTemplate"/>
				<Offset row="1" col="0"/>
			</ExcelHeaderCenterFormatter>
			<ExcelOffsetFormatter>
				<ExcelTemplate ref="excelTemplate"/>
				<Offset row="1" col="0"/>
			</ExcelOffsetFormatter>
		</formatter>

		<formatterServer id="serv" table="${tbs}">
			<formatter ref="data"/>
			<formatter ref="excel"/>
		</formatterServer>

		<response type="excel" ref="excelTemplate" name="应收账款回款周报.xls" serv="serv"/>
	</controller>
	
	<controller id="byqjydwzyYclhglqktj">		
		<call id="authCompMap" object="${authManager}" method="getAuthedCompanies">
			<param type="int">41</param>
		</call>
		<response type="jsp" name="xnyzb/xnyzb"> 
			<map key="date" value="${calendar.current.format}"/>
			<map key="updateUrl" value="yszkhkzbUpdate"/>
			<map key="exportUrl" value="yszkhkzbExport"/>
			<map key="title" value="应收账款回款周报"/>
			<map map="${authCompMap}"/>
		</response>
	</controller>
</components>