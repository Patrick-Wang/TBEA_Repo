<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="financingFactoringShow">
        <response name="framework/templates/singleDateReport/show" type="jsp">
            <map key="year" value="${calendar.current.year}"/>
            <map key="month" value="${calendar.current.month}"/>
            <map key="updateUrl" value="financingFactoringUpdateClr"/>
            <map key="exportUrl" value="financingFactoringExportClr"/>
        </response>
    </controller>
    <controller id="financingFactoringUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingFactoringShowServ"/>
        <callcontroller id="financingFactoringFmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>起始日</name>
                </item>
                <item>
                    <name>到期日</name>
                </item>
                <item>
                    <name>保理金额</name>
                </item>
                <item>
                    <name>年初余额</name>
                </item>
                <item>
                    <name>本年已归还金额</name>
                </item>
                <item>
                    <name>保理余额</name>
                </item>
                <item>
                    <name>利率</name>
                </item>
                <item>
                    <name>手续费率</name>
                </item>
                <item>
                    <name>利息承担方</name>
                </item>
                <item>
                    <name>客户名称</name>
                </item>
                <item>
                    <name>备注</name>
                </item>
                <item>
                    <name>已处理</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="financingFactoringFmtClr">
        <formatter export="true" id="fmtData">
            <PercentFormatter reservedCount="1">
                <DefaultMatcher col="6,7"/>
            </PercentFormatter>
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="2,3,4,5"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="financingFactoringExportClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingFactoringShowServ"/>
        <callcontroller id="financingFactoringFmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="特变电工银行保理台账明细表"/>
        <list id="title" type="string">起始日,到期日,保理金额,年初余额,本年已归还金额,保理余额,利率,手续费率,利息承担方,客户名称,备注,已处理</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="${request.date.asString}特变电工银行保理台账明细表.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="financingFactoringShowServ" transaction="transactionManager">
        <sql id="data">select id,
CONVERT(varchar(20),beginningDate, 23) tmp0,
CONVERT(varchar(20),maturityDate, 23) tmp1,
amount,
beginningOfYearBalance,
loanReturned,
balance,
rate,
fee,
costUndertaker,
clientName,
remark,
solved from financing_factoring</sql>
        <list id="ids" sql="data" value="0"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="date" value="1"/>
            <list sql="data" type="date" value="2"/>
            <list sql="data" type="double" value="3"/>
            <list sql="data" type="double" value="4"/>
            <list sql="data" type="double" value="5"/>
            <list sql="data" type="double" value="6"/>
            <list sql="data" type="double" value="7"/>
            <list sql="data" type="double" value="8"/>
            <list sql="data" type="string" value="9"/>
            <list sql="data" type="string" value="10"/>
            <list sql="data" type="string" value="11"/>
            <list sql="data" type="string" value="12"/>
        </table>
    </service>
</components>
