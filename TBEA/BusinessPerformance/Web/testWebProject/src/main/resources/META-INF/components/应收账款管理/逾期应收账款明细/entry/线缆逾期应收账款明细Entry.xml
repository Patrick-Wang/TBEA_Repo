					<readOnly>true</readOnly>
				</item>
				<item>
					<name>办事处</name>
					<type>text</type>
					<readOnly>true</readOnly>
				</item>
				<item>
					<name>客户单位名称</name>
					<type>text</type>
					<readOnly>true</readOnly>
				</item>
				<item>
					<name>项目名称</name>
					<type>text</type>
					<readOnly>true</readOnly>
				</item>
				<item>
					<name>客户所属行业</name>
					<type>text</type>
					<readOnly>true</readOnly>
				</item>
				<item>
					<name>合同编号</name>
					<type>text</type>
					<readOnly>true</readOnly>
				</item>
