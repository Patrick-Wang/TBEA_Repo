<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="financingLCEntryJSP">
        <response name="framework/templates/singleDateReport/entry" type="jsp">
            <map key="updateUrl" value="financingLCEntryUpdateClr"/>
            <map key="submitUrl" value="financingLCEntrySubmitClr"/>
        </response>
    </controller>
    <controller id="financingLCEntryUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingLCEntryUpdateServ"/>
        <callcontroller id="financingLCEntryFmtClr"/>
        <formatterServer acceptNullAs="" id="fmtServ" table="${result.matrix}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>银行名称</name>
                </item>
                <item>
                    <name>起始日</name>
                </item>
                <item>
                    <name>到期日</name>
                </item>
                <item>
                    <name>币种</name>
                </item>
                <item>
                    <name>信用证金额</name>
                </item>
                <item>
                    <name>保证金比例</name>
                </item>
                <item>
                    <name>备注</name>
                </item>
                <item>
                    <name>信用证余额</name>
                </item>
                <item>
                    <name>已处理</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="financingLCEntryFmtClr">
        <formatter export="true" id="fmtData">
            <PercentFormatter reservedCount="1">
                <DefaultMatcher col="6"/>
            </PercentFormatter>
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="5,8"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <service id="financingLCEntryUpdateServ" transaction="transactionManager">
        <sql id="data">select id,
bankName,
CONVERT(varchar(20),beginningDate, 23) tmp1,
CONVERT(varchar(20),maturityDate, 23) tmp2,
currency,
amount,
marginRatio,
remark,
balance,
solved from financing_LC</sql>
        <list id="ids" sql="data" value="0"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="1"/>
            <list sql="data" type="date" value="2"/>
            <list sql="data" type="date" value="3"/>
            <list sql="data" type="string" value="4"/>
            <list sql="data" type="double" value="5"/>
            <list sql="data" type="double" value="6"/>
            <list sql="data" type="string" value="7"/>
            <list sql="data" type="double" value="8"/>
            <list sql="data" type="string" value="9"/>
        </table>
    </service>
    <controller id="financingLCEntrySubmitClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <context key="data" value="${request.data.asJsonArray}"/>
        <context key="src" value="${session.account.name} 录入"/>
        <context key="time" value="${calendar.current.secondFormat}"/>
        <callservice id="financingLCEntrySubmitServ"/>
        <response type="json">
            <errorCode>0</errorCode>
            <message>OK</message>
        </response>
    </controller>
    <service id="financingLCEntrySubmitServ" transaction="transactionManager">
        <merge data="${data}" table="financing_LC">
            <where>
                <id ref="0" type="int"/>
            </where>
            <set>
                <solved ref="9" type="string"/>
                <_src type="string" value="${src}"/>
                <_time type="date" value="${time}"/>
            </set>
        </merge>
    </service>
</components>
