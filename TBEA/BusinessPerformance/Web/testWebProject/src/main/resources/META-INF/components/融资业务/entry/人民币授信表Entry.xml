<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="financingBankRMBCreditEntryJSP">
        <response name="framework/templates/singleDateReport/entry" type="jsp">
            <map key="updateUrl" value="financingBankRMBCreditEntryUpdateClr"/>
            <map key="submitUrl" value="financingBankRMBCreditEntrySubmitClr"/>
        </response>
    </controller>
    <controller id="financingBankRMBCreditEntryUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="financingBankRMBCreditEntryUpdateServ"/>
        <callcontroller id="financingBankRMBCreditEntryFmtClr"/>
        <formatterServer acceptNullAs="" id="fmtServ" table="${result.matrix}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>银行名称</name>
                </item>
                <item>
                    <name>授信额</name>
                </item>
                <item>
                    <name>已使用额度</name>
                </item>
                <item>
                    <name>贷款余额</name>
                </item>
                <item>
                    <name>授信到期日</name>
                </item>
                <item>
                    <name>已处理</name>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="financingBankRMBCreditEntryFmtClr">
        <formatter export="true" id="fmtData">
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="2,3,4"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <service id="financingBankRMBCreditEntryUpdateServ" transaction="transactionManager">
        <sql id="data">select id,
bankName,
authCreditAmount,
usedAmount,
loanBalance,
CONVERT(varchar(20),authCreditExpire, 23) tmp4,
solved from financing_bank_RMB_credit where dwid = ${dwid}</sql>
        <list id="ids" sql="data" value="0"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="1"/>
            <list sql="data" type="double" value="2"/>
            <list sql="data" type="double" value="3"/>
            <list sql="data" type="double" value="4"/>
            <list sql="data" type="date" value="5"/>
            <list sql="data" type="string" value="6"/>
        </table>
    </service>
    <controller id="financingBankRMBCreditEntrySubmitClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <context key="data" value="${request.data.asJsonArray}"/>
        <context key="src" value="${session.account.name} 录入"/>
        <context key="time" value="${calendar.current.secondFormat}"/>
        <callservice id="financingBankRMBCreditEntrySubmitServ"/>
        <response type="json">
            <errorCode>0</errorCode>
            <message>OK</message>
        </response>
    </controller>
    <service id="financingBankRMBCreditEntrySubmitServ" transaction="transactionManager">
        <merge data="${data}" table="financing_bank_RMB_credit">
            <where>
                <id ref="0" type="int"/>
            </where>
            <set>
                <solved ref="6" type="string"/>
                <_src type="string" value="${src}"/>
                <_time type="date" value="${time}"/>
            </set>
        </merge>
    </service>
</components>
