<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="991BBF8F796F1CD4451D7CA119E764E5SHOWCLR">
        <response name="framework/templates/singleDateReport/show" type="jsp">
            <map key="year" value="${calendar.current.year}"/>
            <map key="month" value="${calendar.current.month}"/>
            <map key="updateUrl" value="991BBF8F796F1CD4451D7CA119E764E5UpdateClr"/>
            <map key="exportUrl" value="991BBF8F796F1CD4451D7CA119E764E5ExportClr"/>
        </response>
    </controller>
    <controller id="991BBF8F796F1CD4451D7CA119E764E5UpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="991BBF8F796F1CD4451D7CA119E764E5ShowServ"/>
        <callcontroller id="991BBF8F796F1CD4451D7CA119E764E5FmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>单位名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>合同编号</name>
                    <type>text</type>
                </item>
                <item>
                    <name>合同名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>供货商名称</name>
                    <type>text</type>
                </item>
                <item>
                    <name>所在国家</name>
                    <type>text</type>
                </item>
                <item>
                    <name>币种 </name>
                    <type>text</type>
                </item>
                <item>
                    <name>付款银行</name>
                    <type>text</type>
                </item>
                <item>
                    <name>合同金额 </name>
                </item>
                <item>
                    <name>签订合同起始日</name>
                    <type>date</type>
                </item>
                <item>
                    <name>签订合同汇率</name>
                </item>
                <item>
                    <name>已付款金额</name>
                </item>
                <item>
                    <name>付款金额</name>
                </item>
                <item>
                    <name>付款时间</name>
                    <type>date</type>
                </item>
                <item>
                    <name>付款方式</name>
                    <type>text</type>
                </item>
                <item>
                    <name>待付合同金额</name>
                </item>
                <item>
                    <name>预计付款金额</name>
                </item>
                <item>
                    <name>预计付款时间</name>
                    <type>date</type>
                </item>
                <item>
                    <name>预计付款方式</name>
                    <type>text</type>
                </item>
                <item>
                    <name>已操作金额</name>
                </item>
                <item>
                    <name>剩余付款方式</name>
                    <type>text</type>
                </item>
                <item>
                    <name>锁汇价格</name>
                </item>
                <item>
                    <name>交割日</name>
                    <type>date</type>
                </item>
                <item>
                    <name>备注</name>
                    <type>text</type>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="991BBF8F796F1CD4451D7CA119E764E5FmtClr">
        <formatter export="true" id="fmtData">
            <PercentFormatter reservedCount="1">
                <DefaultMatcher cols="7"/>
            </PercentFormatter>
            <NumberFormatter reservedCount="1">
                <DefaultMatcher cols="7,10,11,14,15,18,20"/>
            </NumberFormatter>
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="991BBF8F796F1CD4451D7CA119E764E5ExportClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="991BBF8F796F1CD4451D7CA119E764E5ShowServ"/>
        <callcontroller id="991BBF8F796F1CD4451D7CA119E764E5FmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="进口外汇合同明细"/>
        <list id="title" type="string">单位名称,合同编号,合同名称,供货商名称,所在国家,币种 ,付款银行,合同金额 ,签订合同起始日,签订合同汇率,已付款金额,付款金额,付款时间,付款方式,待付合同金额,预计付款金额,预计付款时间,预计付款方式,已操作金额,剩余付款方式,锁汇价格,交割日,备注</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="${request.date.asString}进口外汇合同明细.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="991BBF8F796F1CD4451D7CA119E764E5ShowServ" transaction="transactionManager">
        <sql id="data"><![CDATA[
        select
            feicd.id tmp0,
            companyName, --单位名称
            num , --合同编号
            name, --合同名称
            supplier, --供货商名称
            country, --所在国家
            currency , --币种
            payingBank, --付款银行
            amount, --合同金额
            CONVERT(varchar(20),startDate, 23) tmp1,
            exchangeRate,
            paidAmount,
            paymentAmount,
            CONVERT(varchar(20),paymentTime, 23) tmp5,
            transactionType,
            amountLeft,
            predictPaymentAmount,
            CONVERT(varchar(20),predictPaymentDate, 23) tmp9,
            predictTransactionType,
            operationAmount,
            transactionTypeLeft,
            lockPrice,
            CONVERT(varchar(20),tradeDate, 23) tmp14,
            remark
        from
            foreign_exchange_import_contract_detail feicd,
            foreign_exchange_import_contract feic
        where
            feicd.importContractId = feic.id and
            year = ${cal.year} and
            month = ${cal.month} and
            feic.companyName = ${dwmc}
        ]]></sql>
        <list id="ids" sql="data" value="0"/>
        <context key="counter" value="${counterFactory.newCounter}"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="int" value="${counter.reset[1].val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
