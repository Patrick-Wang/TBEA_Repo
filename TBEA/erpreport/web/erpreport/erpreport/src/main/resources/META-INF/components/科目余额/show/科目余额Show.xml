<?xml version="1.0" encoding="UTF-8"?>
<components>
    <controller id="37CB4530FDDDB6A0000FFEBF3C178862SHOWCLR">
        <context key="userName" value="${session.account.name}"/>
        <callservice id="37CB4530FDDDB6A0000FFEBF3C178862ShowClrServ"/>
        <response name="framework/templates/lovSearch" type="jsp">
            <map key="pager" value="pager"/>
            <map key="options"><![CDATA[
                [
                    {
                        "param" : "ledger",
                        "name": "分类账",
                        "option": ${ledgers.asJson},
                        "direct": "期间"
                    },
                    {
                        "param" : "period",
                        "name": "期间",
                        "option": ${period.asJson}
                    },

                    {
                        "param" : "currency",
                        "name": "币种",
                        "option": ${currency.asJson}
                    },
                    {
                        "param" : "account",
                        "name": "科目",
                        "option": ${accounts.asJson}
                    }
                ]
            ]]>
            </map>
            <map key="updateUrl" value="37CB4530FDDDB6A0000FFEBF3C178862UpdateClr"/>
            <map key="exportUrl" value="37CB4530FDDDB6A0000FFEBF3C178862ExportClr"/>
        </response>
    </controller>
    <controller id="37CB4530FDDDB6A0000FFEBF3C178862UpdateClr">
        <context key="pgNum" value="${request.pgNum.asInt}"/>
        <context key="pgSize" value="${request.pgSize.asInt}"/>
        <context key="ledger" value="${request.ledger.asString}"/>
        <context key="period" value="${request.period.asString}"/>
        <context key="comp" value="${request.comp.asString}"/>
        <context key="currency" value="${request.currency.asString}"/>
        <context key="account" value="${request.account.asString}"/>
        <callservice id="37CB4530FDDDB6A0000FFEBF3C178862ShowServ"/>
        <callcontroller id="37CB4530FDDDB6A0000FFEBF3C178862FmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>科目代码</name>
                    <type>text</type>
                </item>
                <item>
                    <name>科目组合</name>
                    <type>text</type>
                </item>
                <item>
                    <name>年初余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>期初余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本期借方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本期贷方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>期末余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本年累计借方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本年累计贷方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>科目说明</name>
                    <type>text</type>
                </item>
            </header>
            <data>${fmtServ.result}</data>
            <dataCount>${dataCount[0]}</dataCount>
        </response>
    </controller>
    <controller id="37CB4530FDDDB6A0000FFEBF3C178862FmtClr">
        <formatter export="true" id="fmtData">
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="37CB4530FDDDB6A0000FFEBF3C178862ExportClr">
        <context key="pgNum" value="${request.pgNum.asInt}"/>
        <context key="pgSize" value="${request.pgSize.asInt}"/>
        <context key="ledger" value="${request.ledger.asString}"/>
        <context key="period" value="${request.period.asString}"/>
        <context key="currency" value="${request.currency.asString}"/>
        <context key="account" value="${request.account.asString}"/>

        <callservice id="37CB4530FDDDB6A0000FFEBF3C178862ShowServ"/>
        <callcontroller id="37CB4530FDDDB6A0000FFEBF3C178862FmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="科目余额"/>
        <list id="title" type="string">科目代码,科目组合,年初余额,期初余额,本期借方,本期贷方,期末余额,本年累计借方,本年累计贷方,科目说明</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="科目余额.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="37CB4530FDDDB6A0000FFEBF3C178862ShowClrServ" ds="repods">

        <sql id="comps" export="true">
            select comp_id, comp_name from CUX_USERCOMP_V where user_name = ${userName}
            group by comp_id, comp_name
        </sql>
        <sql id="ledgers" export="true">
            select ledger_id, ledger_name from CUX_USERLEDGER_V where user_name = ${userName}
            group by ledger_id, ledger_name
        </sql>
        <sql id="currency" export="true">
            select currency_code, currency_code from apps.fnd_currencies where currency_flag = 'Y' and enabled_flag =
            'Y'
        </sql>
        <list id="ledgerIds" sql="ledgers" value="0"/>
        <sql id="period" export="true"><![CDATA[
            select  period_name,
                    period_name,
                    ledger_id
            from apps.gl_period_statuses
            where application_id = 101 and
                adjustment_period_flag = 'Y' and
                ledger_id in ${ledgerIds}
        ]]></sql>
        <sql id="accounts" export="true"><![CDATA[
            select
                flvv.flex_value,
                flvv.description
            from
                apps.fnd_flex_value_sets flvs,
                apps.fnd_flex_values_vl flvv
            where
                flvs.flex_value_set_name = 'TBEA_COA_AC' and
                flvv.structured_hierarchy_level = '14' and
                flvs.flex_value_set_id = flvv.flex_value_set_id
            order by
                flvv.flex_value
        ]]></sql>
    </service>
    <service id="37CB4530FDDDB6A0000FFEBF3C178862ShowServ" ds="repods">
        <sql id="dataCount" export="true"><![CDATA[
            select
                count(*)
            from
                CUX_ACCOUNTBALANCE_V
            where
                ('all' = ${account} or account_code = ${account}) and
                ('all' = ${ledger} or ledger_id = ${ledger}) and
                ('all' = ${currency} or currency_code = ${currency}) and
                ('all' = ${period} or period_name = ${period})
        ]]></sql>
        <sql id="data" pgNum="${pgNum}" pgSize="${pgSize}"><![CDATA[
            select
                id,
                account_code,
                account_segments,
                year_begin_balance,
                begin_balance,
                period_net_dr,
                period_net_cr,
                end_balance,
                year_acc_dr,
                year_acc_cr,
                account_segments_desc
            from CUX_ACCOUNTBALANCE_V
            where
                ('all' = ${account} or account_code = ${account}) and
                ('all' = ${ledger} or ledger_id = ${ledger}) and
                ('all' = ${currency} or currency_code = ${currency}) and
                ('all' = ${period} or period_name = ${period})

        ]]></sql>
        <list id="ids" sql="data" value="0"/>
        <context key="counter" value="${counterFactory.newCounter}"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="${counter.reset[1].val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
        </table>
    </service>
</components>
