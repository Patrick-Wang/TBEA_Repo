<?xml version="1.0" encoding="UTF-8"?><components>
    <controller id="CUXACCOUNTBALANCEVShow">
        <response name="framework/templates/singleDateReport/show" type="jsp">
            <map key="year" value="${calendar.current.year}"/>
            <map key="month" value="${calendar.current.month}"/>
            <map key="updateUrl" value="CUXACCOUNTBALANCEVUpdateClr"/>
            <map key="exportUrl" value="CUXACCOUNTBALANCEVExportClr"/>
        </response>
    </controller>
    <controller id="CUXACCOUNTBALANCEVUpdateClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="CUXACCOUNTBALANCEVShowServ"/>
        <callcontroller id="CUXACCOUNTBALANCEVFmtClr"/>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
        </formatterServer>
        <response type="json">
            <header type="array">
                <item>
                    <name>科目代码</name>
                    <type>text</type>
                </item>
                <item>
                    <name>科目组合</name>
                    <type>text</type>
                </item>
                <item>
                    <name>年初余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>期初余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本期借方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本期贷方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>期末余额</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本年累计借方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>本年累计贷方</name>
                    <type>text</type>
                </item>
                <item>
                    <name>科目说明</name>
                    <type>text</type>
                </item>
            </header>
            <data>${fmtServ.result}</data>
        </response>
    </controller>
    <controller id="CUXACCOUNTBALANCEVFmtClr">
        <formatter export="true" id="fmtData">
            <EmptyFormatter/>
        </formatter>
    </controller>
    <controller id="CUXACCOUNTBALANCEVExportClr">
        <context key="cal" value="${request.date.asCalendar}"/>
        <callservice id="CUXACCOUNTBALANCEVShowServ"/>
        <callcontroller id="CUXACCOUNTBALANCEVFmtClr"/>
        <ExcelTemplate id="excelTemplate" sheet="科目余额"/>
        <list id="title" type="string">科目代码,科目组合,年初余额,期初余额,本期借方,本期贷方,期末余额,本年累计借方,本年累计贷方,科目说明</list>
        <formatter id="excel">
            <ExcelTitleFilter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="0"/>
                <titles>
                    <title ref="title"/>
                </titles>
            </ExcelTitleFilter>
            <ExcelHeaderCenterFormatter>
                <DefaultMatcher cols="0"/>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelHeaderCenterFormatter>
            <ExcelOffsetFormatter>
                <ExcelTemplate ref="excelTemplate"/>
                <Offset col="0" row="1"/>
            </ExcelOffsetFormatter>
        </formatter>
        <formatterServer id="fmtServ" table="${result.matrixNoIds}">
            <formatter ref="fmtData"/>
            <formatter ref="excel"/>
        </formatterServer>
        <response name="科目余额.xls" ref="excelTemplate" serv="fmtServ" type="excel"/>
    </controller>
    <service id="CUXACCOUNTBALANCEVShowServ" transaction="transactionManager">
        <sql id="data">select 
	id,
	account_code,
	account_segments,
	year_begin_balance,
	begin_balance,
	period_net_dr,
	period_net_cr,
	end_balance,
	year_acc_dr,
	year_acc_cr,
	account_segments_desc
from CUX_ACCOUNTBALANCE_V</sql>
        <list id="ids" sql="data" value="0"/>
        <context key="counter" value="${counterFactory.newCounter}"/>
        <table export="true" id="result" rowIds="ids">
            <list sql="data" type="string" value="${counter.reset[1].val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
            <list sql="data" type="string" value="${counter.next.val}"/>
        </table>
    </service>
</components>
